<!DOCTYPE html>
<html>
<head>
  <title>Gatabase</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="croke">
  <div class="navbar">
    <div class="navbar-inner">
      <ul class="nav navbar-nav">
        <%= link_to "Gatabase", root_path, :class => "brand" %>
      </ul>
      <ul class="nav navbar-nav navbar-right">  
        <% if !user_signed_in? %>
          <%= link_to "Login", new_user_session_path, :class => "brand" %>
          <%= link_to "Sign Up", new_user_registration_path, :class => "brand" %>
        <% end %>
        <% if user_signed_in? %>
          <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "brand" %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="container container-simple">
    <div class="row">
      <div class="col col-lg-12">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
